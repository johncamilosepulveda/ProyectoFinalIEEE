<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regístrate Admin"
            android:textAlignment="center"
            android:textColor="#00629B"
            android:textSize="50sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Completo"
            android:textColor="#00629B"
            android:textColorHint="#00629B"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_usr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:textColor="#00629B"
            android:textColorHint="#00629B"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            android:textColor="#00629B"
            android:textColorHint="#00629B"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="#00629B"
            android:textColorHint="#00629B"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_con_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:textColor="#00629B"
            android:textColorHint="#00629B"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_registro"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_anhadirFoto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/boton_redondo"
                android:src="@drawable/fotoperfil" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_terminos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Términos y condiciones"
                android:textColor="#00629B"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_verTerminos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Ver términos y condiciones"
                android:textSize="10dp"
                android:textStyle="bold" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_blue"
            android:text="Registrar"
            android:textColor="#00629B"
            android:textColorHint="#00629B"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>